<p id="notice"><%= notice %></p>

<h1>Lista de <%= Message.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= Message.human_attribute_name(:description) %></th>
      <th><%= Message.human_attribute_name(:hexadecimal_color) %></th>
      <th><%= Message.human_attribute_name(:message_type) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.description %></td>
        <td><%= message.hexadecimal_color %></td>
        <td><%= message.human_message_type %></td>
        <td><%= render_button 'show', message %></td>
        <td><%= render_button 'edit', edit_message_path(message) %></td>
        <td>
          <%= button_to t('helpers.button.destroy'), destroy_message_path(message),
            :method => 'delete', class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render_button 'new', new_message_path %>
