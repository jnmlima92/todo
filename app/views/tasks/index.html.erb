<p id="notice"><%= notice %></p>

<h1>Lista de <%= Task.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= Task.human_attribute_name(:description) %></th>
      <th><%= Task.human_attribute_name(:status) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.human_status %></td>

        <td><%= render_button 'show', task %></td>
        <td><%= render_button 'edit', edit_task_path(task) %></td>
        <td><%= link_to t('helpers.button.destroy'), task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render_button 'new', new_task_path %>
